<% if @customer.errors.any? %>
  <ul>
  <% @customer.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
  </ul>
<% end %>
<h1>New Customer</h1>

<%= form_for @customer do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br/>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <br/>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br/>
  <%= f.label :somker %> <br/>
  <% { 'Y': 'Yes', 'N': 'No'}.each do |key, value| %>
    <%= f.radio_button :smoker, key %> <%= value %> <br/>
  <% end %>

  <%= f.submit 'Create Customer' %>
<% end %>